{
  "extends": "@kodebase/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "paths": {
      "@kodebase/cli": ["./src"],
      "@kodebase/core": ["../core/src"],
      "@kodebase/artifacts": ["../artifacts/src"],
      "@kodebase/git-ops": ["../git-ops/src"],
      "@kodebase/config": ["../config/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx", "test"]
}
