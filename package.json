{
  "name": "@kodebase/cli",
  "version": "1.2.0",
  "description": "Kodebase CLI - Structured knowledge management for software projects using Git as a database",
  "keywords": [
    "kodebase",
    "cli",
    "project-management",
    "workflow",
    "git",
    "knowledge-management",
    "structured-development",
    "artifacts",
    "milestone-tracking"
  ],
  "author": "Miguel Carvalho <m@kodebase.ai>",
  "license": "MIT",
  "homepage": "https://github.com/kodebaseai/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodebaseai/cli.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/kodebaseai/cli/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "kodebase": "./dist/index.js",
    "kb": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "check-types": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "docs": "typedoc",
    "prepublishOnly": "pnpm run build && pnpm run lint && pnpm run check-types && pnpm run test"
  },
  "dependencies": {
    "@kodebase/artifacts": "workspace:*",
    "@kodebase/config": "workspace:*",
    "@kodebase/core": "workspace:*",
    "@kodebase/git-ops": "workspace:*",
    "@types/ink-select-input": "^3.0.5",
    "@types/ink-spinner": "^3.0.5",
    "chokidar": "^4.0.3",
    "clipboardy": "^5.0.1",
    "glob": "^11.1.0",
    "ink": "^6.5.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "simple-git": "^3.30.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@kodebase/typescript-config": "workspace:*",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^22.19.1",
    "@types/react": "19.2.7",
    "@vitest/coverage-istanbul": "^4.0.13",
    "execa": "^9.6.0",
    "ink-testing-library": "^4.0.0",
    "memfs": "^4.51.0",
    "strip-ansi": "^7.1.2",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.14",
    "typescript": "5.9.3",
    "vitest": "4.0.13"
  }
}
